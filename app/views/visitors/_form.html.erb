<%= simple_form_for(@visitor, html: {class: "form-horizontal", role: "form"}) do |f| %>
<!-- <form role="form" > -->
	<div class="form-group">
		<%= f.input :name, input_html: { class: 'form-control', id: 'name' }%>
	</div>
	<div class="form-group">
		<%= f.input :email, input_html: { class: 'form-control', id: 'email' }%>
	</div>
	<div class="form-group">
        <%= f.input :body, label: 'Message', input_html: { class: 'form-control', id: 'message' }%>
	</div>
	<div class="form-group">
	    <%= f.button :submit, input_html: { class: 'btn btn-default', id: 'Send Message' } %>
	</div>
<% end %>
