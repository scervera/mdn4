<%= simple_form_for(@affiliate) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zipcode %>
    <%= f.input :pastor %>
    <%= f.input :denomination %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
